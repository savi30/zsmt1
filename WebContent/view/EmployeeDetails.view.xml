<mvc:View 
	controllerName="zsmt1.controller.EmployeeDetail" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
		
			<VBox class="sapUiSmallMargin">
		<f:Form id="FormDisplayEmpDetails"
			editable="false">
			<f:title>
				<core:Title text="{Name} {Surname}" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Name">
							<f:fields>
								<Text text="{Name}" id="nameText"  />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Surname">
							<f:fields>
								<Text text="{Surname}" id="surnameText"  />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Active Projects">
							<f:fields>
								<Text text="{NoProjects}" id="projectsText"  />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
	
	<mvc:XMLView viewName="zsmt1.view.EmployeeTabBar"/> 
		
</mvc:View>