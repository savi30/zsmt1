<mvc:View controllerName="zsmt1.controller.ProjectList" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
	<List id="projectList" class="sapUiResponsiveMargin" width="auto"
		items="{
					path:'/ProjectSet',
					parameters:{
							operationMode:'Client'
							},
					sorter : {
							
							path : 'CustName',
							group : true
						}
					}">
		<headerToolbar>
			<Toolbar>
				<ToolbarSpacer />
				
				<SearchField 
				liveChange="onSearch" 
				placeholder="Search Project..."
				width="30%"  
				selectOnFocus="false"/>
					<Button text="{i18n>createProjectTitle}" press="onOpenDialog"
						class="myCustomButton" icon="sap-icon://create" />
												
				
						

				

			</Toolbar>
		</headerToolbar>
		<items>

			<CustomListItem type="Active" press="onPress">
				<FlexBox alignItems="Center" justifyContent="SpaceBetween" >
			
						<Label text="{Name}"/>
						<Button class="myCustomButton" icon="sap-icon://edit"  press="onEditProject"/>
				

				</FlexBox>
			</CustomListItem>
		</items>
	</List>
</mvc:View>