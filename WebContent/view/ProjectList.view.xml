<mvc:View controllerName="zsmt1.controller.ProjectList" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<List id="projectList" class="sapUiResponsiveMargin" width="auto"
		items="{
					path:'/ProjectSet',
					parameters:{
							operationMode:'Client'
							},
					sorter : {
							
							path : 'CustName',
							group : true
						}
					}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>projectListTitle}" />
				<ToolbarSpacer />
				<Button text="{i18n>createProjectTitle}" press="onOpenDialog"
					class="myCustomButton" icon="sap-icon://create" />

			</Toolbar>
		</headerToolbar>
		<items>
			<CustomListItem type="Active" press="onPress">
				<FlexBox alignItems="Start" justifyContent="SpaceBetween" >
			
						<Label text="{Name}"/>
						<Button icon="sap-icon://edit"  press="onEditProject"/>
				
				</FlexBox>
			</CustomListItem>
			</items>
	</List>
</mvc:View>