<mvc:View controllerName="zsmt1.controller.App" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true">
	<App class="zsmt1" id="app">
		<Page class="myAppPage" title="{i18n>homePageTitle}">
			<VBox class="myAppVbox">
				<FlexBox class="myAppFlexContainer">
					<Image class="myAppImage" src="image/MHP.svg"></Image>
				</FlexBox>
				<FlexBox class="myAppFlexBoxButtons">
					<Image press="onSelectManager" class="myAppButtonManager" src="image/manager5.png">
					</Image>
					<Image press="onSelectEmployee" class="myAppButtonEmployee" src="image/employee5.png">
					</Image>
				</FlexBox>
			</VBox>

		</Page>

	</App>

</mvc:View>