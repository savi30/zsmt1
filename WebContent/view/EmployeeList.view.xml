<mvc:View controllerName="zsmt1.controller.EmployeeList" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<List id="projectList" class="sapUiResponsiveMargin" width="auto"
		items="{
					path:'/EmployeeSet',
					parameters:{
							operationMode:'Client'
							},
					sorter : {
							
							path : 'IdSrvU',
							group : true
						}
					}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>employeeListTitle}" />
				<ToolbarSpacer />
								<Title text="{i18n>employeeListNoProjects}" />
			</Toolbar>
		</headerToolbar>
		<items>
			<ObjectListItem title="{Name} {Surname}" type="Active" press="onPress"
				number="{
					parts:[{path:'NoProjects'}],
					formatOptions: {showMeasure: false}
				}"
			numberState="{= ${NoProjects} > 4 ? 'Error' : ${NoProjects}> 1 ? 'Warning' :'Success'}">
				
			</ObjectListItem>
		</items>
	</List>
</mvc:View>

