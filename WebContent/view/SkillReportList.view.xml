
<mvc:View controllerName="zsmt1.controller.SkillReportList"
	height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants">
	<fb:FilterBar reset="onReset" search="onSearch"
		useToolbar="false" showGoOnFB="false">
		<fb:filterItems>
			<fb:FilterItem name="subDomain" label="Sub Domain">
				<fb:control>
					<Select id="subDomainFilter" forceSelection="true" change="onSelectChange"
						items="{
                                                    path: '/SubDomainSet'
                                                }">
						<core:Item key="{IdSdomain}" text="{Name}" />
					</Select>
				</fb:control>
			</fb:FilterItem>
			<fb:FilterItem name="ServiceUnit" label="ServiceUnit">
				<fb:control>
					<Select id="serviceUnitFilter" change="onSelectChange"
						forceSelection="true"
						items="{
                                                    path: '/SrvUnitSet'
                                                 }">
						<core:Item key="{Name}" text="{Name}" />
					</Select>
				</fb:control>
			</fb:FilterItem>
			<fb:FilterItem name="Region" label="Region">
				<fb:control>
					<Select id="regionFilter" change="onSelectChange"
						forceSelection="true">

						<items>
							<core:Item text="North" key="N" />
							<core:Item text="South" key="S" />
							<core:Item text="Est" key="E" />
							<core:Item text="West" key="W" />
							<core:Item text="North-Est" key="NE" />
							<core:Item text="North-West" key="NW" />
							<core:Item text="South-Est" key="SE" />
							<core:Item text="South-West" key="SW" />
						</items>
					</Select>
				</fb:control>
			</fb:FilterItem>
		</fb:filterItems>
	</fb:FilterBar>

	<List id="skillReportList" class="sapUiResponsiveMargin" width="auto"
		items="{
					path:'/SkillSet',
					templateSharable:true,
					parameters:{
							operationMode:'Client'
							},
					sorter : {
							
							path : 'IdSdomain',
							group : true
						}
					}">
		
		<items>
			<ObjectListItem title="{Name}" type="Active" press="onPress">
			</ObjectListItem>
		</items>
	</List>

</mvc:View>