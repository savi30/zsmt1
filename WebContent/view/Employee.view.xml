<mvc:View 
	controllerName="zsmt1.controller.Employee" 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>appTitle}"		  
		  class="sapUiResponsiveContentPadding">
	<headerContent>
		<Toolbar id="employeeToolBar">
				<ToolbarSpacer/>
				<Button icon="sap-icon://menu2" press="handleOpenToolbar"
				class="sapUiSmallMarginBottom"/>
		</Toolbar>
	</headerContent>
	
	<Panel id="EmployeeDetailsFragment"/>
	
	<mvc:XMLView viewName="zsmt1.view.EmployeeTabBar"/> 
	
	</Page>
</mvc:View>