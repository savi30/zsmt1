<mvc:View controllerName="zsmt1.controller.Login" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">

	<Page title="{i18n>loginPageTitle}" showNavButton="true"
		navButtonPress="onNavBack" class="myPage">
		<content>
			<l:VerticalLayout class="myPanel" width="100%">
				<l:content>


					<FlexBox
						class="myFlexContainer myFlexContainer-item myFlexContainer-item--top myFlexContainer-item--bottom">

						<VBox class="myVbox">
							<Image class="myLoginImage" press="handleLogin" src="image/padlock.png" />
							<Label text="Username" labelFor="nameInput" class="myFlexText"/>

							<Input id="nameInput" class="sapUiSmallMarginBottom" type="Text"
								placeholder="Enter Username ..." valueStateText="Username must not be empty. Maximum 30 characters." submit="handleLogin"/>

							<Label text="Password" labelFor="passwordInput" class="myFlexText"/>

							<Input id="passwordInput" class="sapUiSmallMarginBottom"
								type="Password" placeholder="Enter Password ..." valueStateText="Password must not be empty." submit="handleLogin"/>
						</VBox>
	



					</FlexBox>




				</l:content>
			</l:VerticalLayout>
		</content>
	</Page>

</mvc:View>